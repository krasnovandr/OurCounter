@{
    ViewBag.Title = "";
}
@model OurCounter.Models.ImageModel


<div class="container container-fluid">
    <link rel="stylesheet" href="~/Content/ImageGalleryStyles/blueimp-gallery.css">
    <link rel="stylesheet" href="~/Content/ImageGalleryStyles/blueimp-gallery-indicator.css">
    <div class="container">
        <div class="row">
            <h2>Наши фотки!</h2>
            <!-- The container for the list of example images -->
            <div id="links" class="links"></div>
            @foreach (var image in Model.Images)
            {
                <a href="@Url.Action("GetImageFull", new { imageName = image })" title="" data-gallery>
                    <img src="@Url.Action("GetImage", new { imageName = image })" alt="@image " width="100" height="100" />
                </a>

            }
            <!-- The Gallery as lightbox dialog, should be a child element of the document body -->
            <div id="blueimp-gallery" class="blueimp-gallery">
                <div class="slides"></div>
                <h3 class="title"></h3>
                <a class="prev">‹</a>
                <a class="next">›</a>
                <a class="close">×</a>
                <a class="play-pause"></a>
                <ol class="indicator"></ol>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/ImageGallery/blueimp-helper.js"></script>
<script src="~/Scripts/ImageGallery/blueimp-gallery.js"></script>
<script src="~/Scripts/ImageGallery/blueimp-gallery-fullscreen.js"></script>
<script src="~/Scripts/ImageGallery/blueimp-gallery-indicator.js"></script>
<script src="~/Scripts/ImageGallery/blueimp-gallery-video.js"></script>
<script src="~/Scripts/ImageGallery/blueimp-gallery-vimeo.js"></script>
<script src="~/Scripts/ImageGallery/blueimp-gallery-youtube.js"></script>
<script src="~/Scripts/ImageGallery/vendor/jquery.js"></script>
<script src="~/Scripts/ImageGallery/jquery.blueimp-gallery.js"></script>


